<form action="/registration" method="POST" id="registration-form" class="auth-form container col-12 col-md-7 col-xl-4 needs-validation" novalidate autocomplete="off">
    <!-- Disclaimer -->
    <div class="modal fade" id="disclaimerModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="alertdialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title" id="exampleModalLabel">Disclaimer</h1>
                </div>
                <div class="modal-body">
                    This website is currently in development phase. You do not have to use real credentials to sign up.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary modal-button" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <h1 class="text-center page-title mb-3">Sign Up</h1>

    <div class="required-instruction">Required fields are marked with an asterisk <span aria-hidden="true">(<span class="asterisk">*</span>)</span></div>
    <div class="auth-form-field" id="name">
        <label for="user-name" class="input-label">Your name <span aria-hidden="true" class="asterisk"> *</span></label>
        <input type="text" name="username" id="user-name" class="form-control" autofocus autocomplete="name" required aria-required="true">
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
            Please enter your name.
        </div>
    </div>

    <div class="auth-form-field" id="email">
        <label for="user-email" class="input-label">Email <span aria-hidden="true" class="asterisk"> *</span></label>
        <input type="email" name="email" id="user-email" class="form-control" autocomplete="email" required aria-required="true">
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
            Please provide a valid email address. Example: example@email.com
        </div>
    </div>

    <div class="auth-form-field" id="password">
        <label for="user-password" class="input-label">Password <span aria-hidden="true" class="asterisk"> *</span></label>
        <input type="password" name="password" id="user-password" class="form-control" autocomplete="new-password" required aria-required="true">
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
            Please choose a password.
        </div>
    </div>

    <div class="auth-form-field" id="password-repeat">
        <label for="user-password-repeat" class="input-label">Repeat password <span aria-hidden="true" class="asterisk"> *</span></label>
        <input type="password" name="password_repeat" id="user-password-repeat" class="form-control" autocomplete="new-password" required aria-required="true">
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
            Please repeat your password.
        </div>
    </div>

    <!--Toggle between password visibility -->
    <label for="show-password" class="show-password-label"><input type="checkbox" id="show-password">Show passwords</label>

    <button type="submit" class="btn btn-primary">Sign up</button>

    <div class="mt-3 mb-3 text-end">Already have an account? <span><a href="/login">Log In</a></span></div>
    <hr aria-hidden="true">
    <!-- Google SSO-->
    <div>
        <a class="btn btn-outline-primary google-link d-flex flex-row justify-content-center align-items-center" href="/auth/google" role="button">
            <img class="google-icon" alt="Google" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>
            <span>Sign up with Google</span>
        </a>
    </div>
</form>
