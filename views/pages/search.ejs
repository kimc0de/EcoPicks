<div id="search-page">
    <% if (results && results.length > 0) { %>
        <h1 class="text-center page-title">Search results</h1>
    <% } else { %>
        <h1 class="text-center page-title">We're sorry... No results were found for "<%= query%>"</h1>
        <!-- Search bar    -->
        <form method="get" action="/search">
            <div id="search_section" class="row d-flex justify-content-center">
                <div id="search_bar" class="col-sm-6 col-12">
                    <label for="search_field" class="visually-hidden"> Search for a brand or a product </label>
                    <input id="search_field" class="textField_input form-control" autocomplete="off"
                           name="q" value="<%= query%>" type="search" placeholder="Search for a brand or a product">
                </div>
                <button type="submit" id="search_button" class="btn btn-primary mt-2 mt-sm-0 col-12 col-sm-6 justify-content-center">
                    <i aria-hidden="true" class="fas fa-search"></i>
                    <span class="ms-2">Search</span>
                </button>
            </div>
        </form>
    <% } %>
    <div class="container mt-sm-1 mb-sm-1">
        <% if (results && results.length > 0) { %>
                <div id="search-results" class="d-flex flex-column">
                    <h2 class="total-results justify-content-start"><%= results.length %> results for "<%= query%>"</h2>
                    <div class="brands-container">
                        <%- include ('../components/brandCard') %>
                    </div>
                    <button class="load-more btn btn-outline-primary ms-auto me-auto" type="button">Load More</button>
                </div>
            <% } else { %>
                <div class="no-results-section justify-content-start">
                    <div>
                        <h3 class="suggestions">Search suggestions</h3>
                        <ul>
                            <li>Please make sure all words are spelled correctly</li>
                            <li>Try different keywords with the same meaning</li>
                            <li>Try more general keywords</li>
                        </ul>
                    </div>
                    <div>
                        <h3 class="suggestions">Do you want to recommend a brand to us?</h3>
                        <span><a href="/user/recommendation">Go to recommendation page</a></span>
                    </div>
                    <div>
                        <h3 class="suggestions">If you need more help, contact us with the link below.</h3>
                        <span><a href="/contact">Go to contact page</a></span>
                    </div>

                    <div>
                        <h2 class="total-results mt-5">You might be interested in these following brands</h2>
                        <%if (popularBrands && popularBrands.length > 0) { %>
                            <%- include ('../components/popularBrandCard') %>
                        <%}%>
                    </div>
                </div>
        <% } %>
    </div>
</div>
