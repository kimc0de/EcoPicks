<div class="container" id="confirmation-page">
  <div class="justify-content-center text-center" id="confirmation-body">
    <!-- Checkmark Icon -->
    <div id="confirmation-top">
        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="130" height="130" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
          <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
        </svg>
    </div>

    <div id="confirmation-bottom">
      <% if (loggedIn) { %>
        <h1 class="font-weight-bold">Thank you <%= user.username %></h1>
      <% } else { %>
        <h1 class="font-weight-bold">Thank you</h1>
        <%}%>
      <div class="mb-2 mt-2 ml-2 mr-2">We received your recommendation!</div>
      <div class="mb-2 mt-2 ml-2 mr-2">You can now view them on your profile page.</div>

      <!-- Suggest another brand -->
      <div class="add-another-button">
        <a class="btn btn-outline-primary" href="/user/recommendation">Recommend a new brand</a>
      </div>

      <!-- Back to profile page -->
      <div class="back-to-profile">
        <a class="btn btn-primary" href="/user">Go to profile page</a>
      </div>
    </div>

  </div>
</div>
