<div class="container" id="error-page">
  <div class="justify-content-center text-center" id="error-body">
      <!-- Cross Icon -->
    <div id="error-top">
      <img src="/images/ecopicks/error.png" width="100" height="100" alt="Error">
    </div>

    <div id="error-bottom">
      <!-- Error message -->
      <% if (!errorCode && !errorMessage) { %>
        <h1 id="error-title">Error</h1>
        <div class="mb-2 mt-2">Something went wrong. Please try again later!</div>
      <% } else { %>
        <h1 id="error-title">Error <%=errorCode%></h1>
        <% if (errorCode === 404) { %>
          <div class="fw-bold page-not-found">Page Not Found</div>
        <% } %>
        <div class="mt-4"><%=errorMessage%></div>
      <% } %>

      <!-- Action buttons -->
      <div class="action-buttons d-flex flex-row justify-content-center">
        <a href="/" class="ms-4 me-4">
          Go to homepage
        </a>
        <a href="/contact" class="ms-4 me-4">
          Report a problem
        </a>
      </div>
    </div>
  </div>

  <!--  Extra instruction for 404 error page-->
  <% if (errorCode === 404) { %>
    <div class="d-flex flex-column align-items-start ps-1 pe-1 ps-lg-5 pe-lg-5 mt-4 mb-2">
      <h2 class="mt-3">Why can't this page be found?</h2>
      <ul>
        <li class="mt-2">This page might be deleted or moved.</li>
        <li class="mt-2">This page never exists.</li>
        <li class="mt-2">The URL was broken.</li>
        <li class="mt-2">The URL was written incorrectly.</li>
      </ul>

      <h2 class="mt-3">Try checking your spelling</h2>
      <div class="text-start mt-2 mb-2">Please make sure the URL are spelled correctly.</div>

      <h2 class="mt-3">Try the homepage</h2>
      <div class="text-start mt-2 mb-2">You can visit our homepage <a href="/">ecopicks.herokuapp.com</a> to see what we offer.</div>

      <h2 class="mt-3">If you need help</h2>
      <div>Please contact us with the following link if you need more help. <a href="/contact">Go to contact page</a></div>
    </div>
  <% } %>
</div>
