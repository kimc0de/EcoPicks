<form action="/login" method="POST" class="auth-form container col-12 col-md-7 col-xl-4">
    <h1 class="text-center page-title mb-3">Log In</h1>

    <div class="auth-form-field">
      <label for="user-email" class="input-label">Email </label>
      <input type="text" name="email" id="user-email" class="form-control" autofocus autocomplete="on" aria-required="true">
    </div>

    <div class="auth-form-field">
      <label for="user-password" class="input-label">Password</label>
      <input type="password" name="password" id="user-password" class="form-control" autocomplete="on" aria-required="true">
    </div>

    <!--Toggle between password visibility -->
    <label for="show-password" class="show-password-label"><input type="checkbox" id="show-password">Show password</label>

    <button type="submit" class="btn btn-primary">Log in</button>

    <div class="mt-3 mb-3 text-end">Don't have an account? <span><a href="/registration">Create an account</a></span></div>

    <hr aria-hidden="true">
    <!-- Google SSO-->
    <div>
        <a class="btn btn-outline-primary google-link d-flex flex-row justify-content-center align-items-center" href="/auth/google" role="button">
            <img class="google-icon" alt="Google" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>
            <span>Log in with Google</span>
        </a>
    </div>
</form>
