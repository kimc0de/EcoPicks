<!-- brand cards-->
<ul class="row brand-card" id="popular-brand-card">
    <% popularBrands.forEach(brand => { %>
    <li class="col col-12 col-md-6 col-lg-4 card-wrapper">
        <div
             class="card-body d-flex position-relative"
             onclick="location.href='/brand/<%=brand._id%>';"
             data-id="<%=brand._id%>">
            <img class="brand-logo" src="<%= brand.image %>" alt="Logo of <%= brand.name %>" width="100" height="100">
            <div class="ms-3">
                <a href="/brand/<%=brand._id%>" class="brand-name" aria-label="Brand's name: <%= brand.name %>"><%= brand.name %></a>
                <p class="brand-slogan"><%= brand.slogan %></p>
            </div>
        </div>
    </li>
    <% })%>
</ul>
