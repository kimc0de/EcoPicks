<div class="container-fluid" id="detail-page">
  <div class="row">
    <div class="<%= categoryClass %>" id="category-bg">
      <img class="app-logo" src="<%= brandImg %>" alt="Logo of <%= brand.name %>">
    </div>
  </div>
  <div class="app-title">
    <h1>
      <%= brand.name %>
    </h1>
  </div>
  <div class="description container">
    <p>
      <%= brand.description %>
    </p>
  </div>
  <div class="bottom-part d-flex justify-content-center">
      <button id="website-button" class="btn btn-outline-primary m-3" onclick="location.href='<%=brand.website%>'">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M5 3C3.90694 3 3 3.90694 3 5V19C3 20.0931 3.90694 21 5 21H19C20.0931 21 21 20.0931 21 19V12H19V19H5V5H12V3H5ZM14 3V5H17.5859L8.29297 14.293L9.70703 15.707L19 6.41406V10H21V3H14Z"/>
        </svg>
        <span>Website</span>
      </button>
      <button id="save-button" class="btn btn-outline-primary m-3" name="favourite" value="favourite">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M17 3H7C5.9 3 5.01 3.9 5.01 5L5 21L12 18L19 21V5C19 3.9 18.1 3 17 3ZM17 18L12 15.82L7 18V5H17V18Z"/>
        </svg>
        <span>Save</span>
      </button>
  </div>
</div>
