<form action="/login" method="POST" class="auth-form container col-12 col-md-7 col-xl-4">
    <h1 class="text-center page-title">Log In</h1>

    <div class="auth-form-field">
      <label for="user-name" class="input-label">Username</label>
      <input type="text" name="username" id="user-name" class="form-control" autofocus required>
    </div>

    <div class="auth-form-field">
      <label for="user-password" class="input-label">Password</label>
      <input type="password" name="password" id="user-password" class="form-control" required>
    </div>
    <!--Toggle between password visibility -->
    <label class="show-password-label"><input type="checkbox" id="show-password">Show password</label>
  <button type="submit" class="btn btn-primary">Log in</button>
</form>
