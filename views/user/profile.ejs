<div id="profile-page">

  <div class="col-12 col-lg-8 col-xxl-4 profile-general">
    <div class="username-background">
      <h1 class="user-name"><%= user.username %></h1>
    </div>

    <div class="d-flex justify-content-center align-items-center edit-profile">
      <svg role="img" focusable="false" aria-labelledby="edit-link" aria-hidden="true" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="12" cy="12" r="12" fill="#0D4813"/>
        <g clip-path="url(#clip0_77_168)">
          <path d="M15.8845 10.9615L9.5635 17.281L6 18L6.719 14.436L13.0395 8.116L15.8845 10.9615ZM16.5915 10.2545L18 8.8445L15.1545 6L13.7465 7.4085L16.5915 10.2545Z" fill="white"/>
        </g>
        <defs>
          <clipPath id="clip0_77_168">
            <rect width="12" height="12" fill="white" transform="translate(6 6)"/>
          </clipPath>
        </defs>
      </svg>
      <a href="/user/edit" id="edit-link" class="edit-profile-link">Edit profile</a>
    </div>

    <div class="d-flex flex-row profile-summary">
      <div class="summary-background">
        <div class="summary-nr">
          <span class="visually-hidden">Number of saved brands: </span>
          <strong><%= savedBrands.length %></strong>
          <span class="d-block" aria-hidden="true">saved</span>
        </div>
      </div>
      <div class="summary-background">
        <div class="summary-nr">
          <span class="visually-hidden">Number of my recommendations: </span>
          <strong><%=recommendedBrands.length %></strong>
          <span class="d-block" aria-hidden="true">recommended</span>
        </div>
      </div>
    </div>
  </div>


  <div class="brands-list col-12 col-xxl-8">

    <div class="brands-list-wrapper">
      <h2>My saved eco brands</h2>
      <%- include ('../components/savedBrandCard') %>
    </div>

    <div class="brands-list-wrapper">
      <h2>My recommendations </h2>
      <%- include ('../components/recommendedBrandCard') %>
    </div>

  </div>
</div>
