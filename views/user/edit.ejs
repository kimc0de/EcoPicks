<div class="container mt-5 mb-5 pl-3 pr-3" id="edit-profile">
  <h1 class="mt-3 mb-3 text-center">Edit profile</h1>

  <form action="<%=`/user/update?_method=PUT`%>" method="POST" id="edit-profile-form" autocomplete="new-password">
    <div id="edit-section" class="mt-5">
      <div class="row mb-4">
        <div class="col-sm-4 edit-label">
          <label for="edit-username" class="edit-label">User name</label>
        </div>
        <div class="col-sm-8">
          <input type="text" id="edit-username" name="username" class="form-control edit-input" value="<%= user.username %>">
        </div>
      </div>

      <div class="row mb-4">
        <div class="col-sm-4 edit-label">
          <label for="edit-email" class="edit-label">Email</label>
        </div>
        <div class="col-sm-8">
          <input type="text" id="edit-email" name="email" class="form-control edit-input" value="<%= user.email%>">
          <p>You will be logged out after changing your email</p>
        </div>
      </div>

      <div class="row mb-4">
        <div class="col-sm-4 edit-label">
          <label for="old-pw" class="edit-label">Old password</label>
        </div>
        <div class="col-sm-8">
          <input type="password" id="old-pw" name="oldPassword" autocomplete="old-password" class="form-control edit-input" >
        </div>

        <div class="col-sm-4 edit-label">
          <label for="new-pw" class="edit-label">New password</label>
        </div>
        <div class="col-sm-8">
          <input type="password" id="new-pw" name="newPassword" autocomplete="new-password" class="form-control edit-input" >
        </div>

        <div class="col-sm-4 edit-label">
          <label for="new-pw-repeat" class="edit-label">Repeat new password</label>
        </div>
        <div class="col-sm-8">
          <input type="password" id="new-pw-repeat" name="newPasswordRepeat" autocomplete="new-password" class="form-control edit-input" >
        </div>
      </div>

    </div>

    <div class=" d-flex flex-row justify-content-center mt-5 mb-5">
      <a role="button" class="btn btn-outline-primary edit-btn" href="/user">Cancel</a>
      <button type="submit" class="btn btn-primary edit-btn">Save</button>
    </div>

  </form>
</div>
