<form action="/register" method="POST" class="auth-form container col-12 col-md-7 col-xl-4">
    <h1 class="text-center page-title mb-3">Register</h1>
    <div id="required-instruction">All fields marked with <span class="asterisk"> *</span> are required</div>
    <div class="auth-form-field">
        <label for="user-name" class="input-label">Username <span aria-hidden="true" class="asterisk"> *</span></label>
        <input type="text" name="username" id="user-name" class="form-control" autofocus autocomplete="off" aria-required="true">
    </div>

    <div class="auth-form-field">
        <label for="user-email" class="input-label">Email <span aria-hidden="true" class="asterisk"> *</span></label>
        <input type="email" name="email" id="user-email" class="form-control" autocomplete="on" aria-required="true">
    </div>

    <div class="auth-form-field">
        <label for="user-password" class="input-label">Password <span aria-hidden="true" class="asterisk"> *</span></label>
        <input type="password" name="password" id="user-password" class="form-control" autocomplete="off" aria-required="true">
    </div>

    <div class="auth-form-field">
        <label for="user-password-repeat" class="input-label">Repeat password <span aria-hidden="true" class="asterisk"> *</span></label>
        <input type="password" name="password_repeat" id="user-password-repeat" class="form-control" autocomplete="off" aria-required="true">
    </div>

    <!--Toggle between password visibility -->
    <label for="show-password" class="show-password-label"><input type="checkbox" id="show-password">Show passwords</label>

    <button type="submit" class="btn btn-primary">Register</button>

    <div class="mt-3 mb-3 text-end">Already have an account? <span><a href="/login">Log In</a></span></div>
</form>
