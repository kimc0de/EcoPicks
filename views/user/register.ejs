<form action="/register" method="POST" class="auth-form container col-12 col-md-7 col-xl-4">
    <h1 class="text-center page-title mb-3">Register</h1>
    <p id="required-instruction">All fields marked with <span class="asterisk"> *</span> are required</p>
    <div class="auth-form-field">
        <label for="user-name" class="input-label">Username <span aria-hidden="true" class="asterisk"> *</span></label>
        <input type="text" name="username" id="user-name" class="form-control" autofocus required>
    </div>

    <div class="auth-form-field">
        <label for="user-email" class="input-label">Email <span aria-hidden="true" class="asterisk"> *</span></label>
        <input type="email" name="email" id="user-email" class="form-control" required>
    </div>

    <div class="auth-form-field">
        <label for="user-password" class="input-label">Password <span aria-hidden="true" class="asterisk"> *</span></label>
        <input type="password" name="password" id="user-password" class="form-control" required>
    </div>

    <div class="auth-form-field">
        <label for="user-password-repeat" class="input-label">Repeat password <span aria-hidden="true" class="asterisk"> *</span></label>
        <input type="password" name="password_repeat" id="user-password-repeat" class="form-control" required>
    </div>
    <!--Toggle between password visibility -->
    <label class="show-password-label"><input type="checkbox" id="show-password">Show passwords</label>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
